<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee_Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Employee_Management.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Sidebar styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 285px;
            background-color: #343a40;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            color: #ffffff;
        }

            .sidebar a {
                color: #ffffff;
                text-decoration: none;
                padding: 10px;
                display: block;
                font-size: 18px;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

            .sidebar .nav-item {
                border-bottom: 1px solid #495057;
            }

            .sidebar .navbar-brand {
                color: #ffffff;
                padding: 15px 5px;
                font-size: 24px;
                font-weight: bold;
            }
        /* Content Area */
        .content-area {
            margin-left: 290px;
            padding: 20px;
        }
        /* Button spacing */
        .btn {
            margin-right: 10px;
        }
        /* Footer */
        footer {
            background-color: #f8f9fa;
            color: #6c757d;
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Employee_Management</a>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Employees" asp-action="Index">
                            <i class="bi bi-person-badge"></i> Employees
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Departments" asp-action="Index">
                            <i class="bi bi-building"></i> Departments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="PerformanceReviews" asp-action="Index">
                            <i class="bi bi-bar-chart-line"></i> Performance Reviews
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="PerformanceReviews" asp-action="DepartmentPerformance">
                            <i class="bi bi-clipboard-check"></i> Department Performance
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
