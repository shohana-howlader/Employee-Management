@model EmployeeManagement.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="card-title text-center">Create Department</h1>
        <p class="text-muted text-center">Fill out the form below to add a new department.</p>

        <form asp-action="Create" class="mt-4">
            <div class="row">
                <!-- Department Name -->
                <div class="col-md-6 mb-3">
                    <label asp-for="DepartmentName" class="form-label">Department Name</label>
                    <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>

                <!-- Manager -->
                <div class="col-md-6 mb-3">
                    <label asp-for="ManagerId" class="form-label">Manager</label>
                    <select asp-for="ManagerId" class="form-select" asp-items="@(new SelectList(ViewBag.Employees, "Id", "Name"))">
                        <option value="">-- Select Manager --</option>
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Budget -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Budget" class="form-label">Budget</label>
                    <input asp-for="Budget" type="number" class="form-control" placeholder="Enter budget amount" />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>
