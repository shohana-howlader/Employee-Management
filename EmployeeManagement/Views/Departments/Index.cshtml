@model IEnumerable<EmployeeManagement.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="card mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
        <h1 class="card-title mb-0">Departments</h1>
        
    </div>
</div>

<p class="mt-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Department Name</th>
                        <th>Manager</th>
                        <th>Budget</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var department in Model)
                        {
                            <tr>
                                <td>@department.DepartmentName</td>
                                <td>@department.Manager?.Name</td>
                                <td>@department.Budget</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-sm btn-warning me-2" title="Edit Department" data-bs-toggle="tooltip">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-sm btn-danger" title="Delete Department" data-bs-toggle="tooltip">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No departments available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
