@model EmployeeManagement.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Delete Department</h1>

<h3>Are you sure you want to delete this department?</h3>
<div>
    <h4>@Model.DepartmentName</h4>
    <dl class="row">
        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@Model.Manager?.Name</dd>
        <dt class="col-sm-2">Budget</dt>
        <dd class="col-sm-10">@Model.Budget</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>