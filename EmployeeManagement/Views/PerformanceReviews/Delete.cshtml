@model EmployeeManagement.Models.PerformanceReview

@{
    ViewData["Title"] = "Delete Performance Review";
}

<h1>Delete Performance Review</h1>

<h3>Are you sure you want to delete this review?</h3>
<div>
    <h4>Employee: @Model.Employee.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Review Date</dt>
        <dd class="col-sm-10">@Model.ReviewDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Review Score</dt>
        <dd class="col-sm-10">@Model.ReviewScore</dd>
        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.ReviewNotes</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>