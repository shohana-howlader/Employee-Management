@model IEnumerable<EmployeeManagement.Models.PerformanceReview>

@{
    ViewData["Title"] = "Performance Reviews";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="card-title text-center">Performance Reviews</h1>


        <!-- Add New Review Button -->
        <div class="d-flex justify-content-end mb-4">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Review
            </a>
        </div>

        <!-- Performance Reviews Table -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Employee Name</th>
                        <th>Review Date</th>
                        <th>Review Score</th>
                        <th>Notes</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No performance reviews available.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td>@review.Employee.Name</td>
                                <td>@review.ReviewDate.ToString("dd MMM yyyy")</td>
                                <td>@review.ReviewScore</td>
                                <td>@review.ReviewNotes</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-warning me-2" title="Edit Review" data-bs-toggle="tooltip">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-danger" title="Delete Review" data-bs-toggle="tooltip">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
